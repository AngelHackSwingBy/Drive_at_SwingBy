<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tomoki.myheartrate.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="#ffffff"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="50dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Hobby 1"
            android:textSize="20sp"
            android:textColor="#99cccc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:entries="@array/list01"
            android:spinnerMode="dialog"

            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Hobby 2"
            android:textSize="20sp"
            android:textColor="#99cccc"/>

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:entries="@array/list02"
            android:spinnerMode="dialog"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Hobby 3 "
            android:textSize="20sp"
            android:textColor="#99cccc"/>

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:entries="@array/list03"
            android:spinnerMode="dialog"/>

        <Button
            android:id="@+id/start_service"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:text="Start Driving"
            android:textColor="#999999"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="74dp"
            android:background="@drawable/button_background"/>


        <Space android:layout_width="match_parent"
            android:layout_height="15dip"/>

        <Button
            android:id="@+id/end_service"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_state"
            android:text="Finish Driving"
            android:textColor="#999999"
            tools:layout_editor_absoluteX="180dp"
            tools:layout_editor_absoluteY="65dp" />

        <TextView
            android:id="@+id/view_heatbeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ã€€"
            />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
